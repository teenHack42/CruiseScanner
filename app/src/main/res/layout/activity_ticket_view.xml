<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.github.teenhack42.cruisescanner.TicketView"
	tools:layout_editor_absoluteY="81dp">

	<TextView
		android:id="@+id/name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:textColor="@android:color/black"
		android:textSize="30sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/crew"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="24dp"
		android:layout_marginTop="8dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/mobile"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/name" />

	<TextView
		android:id="@+id/mobile"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="24dp"
		android:layout_marginTop="8dp"
		android:textAlignment="textEnd"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/crew"
		app:layout_constraintTop_toBottomOf="@+id/name" />

	<ToggleButton
		android:id="@+id/toggleAdmited"
		style="@style/AppTheme"
		android:layout_width="271dp"
		android:layout_height="268dp"
		android:layout_marginEnd="8dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="100dp"
		android:checked="false"
		android:textOff="Off Board"
		android:textOn="On Board"
		android:textSize="30sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/crew" />
</android.support.constraint.ConstraintLayout>
